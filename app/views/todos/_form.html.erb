<%= form_for(todo, url: todo.new_record? ? project_todos_url(project) : project_todo_path(project, todo)) do |f| %>

  <div class="form-group">
    <%= f.label :name, '任务名称' %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <% @project.members.each do |d| %>
  <div class="checkbox">
    <label>
     <%= radio_button_tag "user[]", d.id %>
     <%= d.name %>
    </label>
  </div>
  <% end %>
  <button type="submit" class="btn btn-default">创建</button>
<% end %>
